@model MainDataViewModel
@{

}
@{
    ViewBag.Title = "Komitə üzvləri";
    Layout = "_Layout";
}


<!--search -->
<div class="container pt-5">
    <form method="post" enctype="multipart/form-data" id="editForm" class="">
        <div class="card card-success">
            <div class="card-header myCardHeader">
                <b>Komitə üzvlüyündə dəyişiklik</b>
            </div>
            <div class="card-body">
                <input hidden asp-for="MainId" />
                <input hidden asp-for="RelatedPerson.Id" />
                <input hidden asp-for="ComitteeId" />
                <div class="row pt-2">
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Komitə</label>
                        <select asp-for="PersonCommittee.ComId" class="form-control form-control-sm col-md-7">
                            <option value="">--</option>
                            @foreach (var item in Model.Committees)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Komitə üzvlüyü</label>
                        <select asp-for="PersonCommittee.Position" class="form-control form-control-sm col-md-7">
                            <option value="0">Üzv</option>
                            <option value="1">Sədr</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>


        <button id="" class="btn btn-success float-end mt-4" asp-action="EditPersonCommittee" asp-controller="Home" type="submit">Yadda Saxla</button>
        <button name="IdForCommittees" value="@Model.MainId" class="btn btn-primary float-end mt-4 mr-3" asp-action="PersonCommittees" asp-controller="Home" type="submit">Imtina</button>
    </form>

</div>
