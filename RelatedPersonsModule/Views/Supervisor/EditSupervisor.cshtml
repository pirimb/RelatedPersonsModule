@model MainDataViewModel
@{

}
@{
    ViewBag.Title = "Müşəhidə şurası";
    Layout = "_Layout";
}


<!--search -->
<div class="container pt-5">
    <form method="post" enctype="multipart/form-data" id="editForm" class="">
        <div class="card card-success">
            <div class="card-header myCardHeader">
                <b>Müşəhidə şurası məlumatları</b>
            </div>
            <div class="card-body">
                <input hidden asp-for="RelatedPerson.Id" />
                <div class="row pt-2">
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Ad</label>
                        <input id="relatedPerson_name" class="form-control form-control-sm col-md-7" value="@Model.RelatedPerson.Name" asp-for="RelatedPerson.Name" />
                    </div>
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Soyad</label>
                        <input id="relatedPerson_surName" class="form-control form-control-sm col-md-7" value="@Model.RelatedPerson.SurName" asp-for="RelatedPerson.SurName" />
                    </div>
                </div>

                <div class="row pt-2">
                    <div class="form-group-sm-sm col-md-6 row">
                        <label class="col-md-5">Ata adı</label>
                        <input id="relatedPerson_Patron" class="form-control form-control-sm col-md-7" value="@Model.RelatedPerson.Patron" asp-for="RelatedPerson.Patron" />
                    </div>
                    <div class="form-group-sm-sm col-md-6 row">
                        <label class="col-md-5">Pin kod</label>
                        <input id="pin_code" class="form-control form-control-sm col-md-7" value="@Model.RelatedPerson.PinCode" asp-for="RelatedPerson.PinCode" />
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row pt-2">
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Qeydiyyat nömrəsi</label>
                        <input id="relatedPerson_cif" class="form-control form-control-sm col-md-7" value="@Model.RelatedPerson.Cif" asp-for="RelatedPerson.Cif" />
                    </div>
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Tutduğu vəzifə</label>
                        <select asp-for="RelatedPerson.Position" class="form-control form-control-sm col-md-7">
                            <option value="0">--</option>
                            <option value="3">Baş direktor</option>
                        </select>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Səhmdar</label>
                        <select asp-for="RelatedPerson.IsShareholder" class="form-control form-control-sm col-md-7">
                            <option value="0">Xeyr</option>
                            <option value="1">Bəli</option>
                        </select>
                    </div>
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Audit komitəsi üzvü</label>
                        <select asp-for="RelatedPerson.IsAudit" class="form-control form-control-sm col-md-7">
                            <option value="0">Xeyr</option>
                            <option value="1">Bəli</option>
                        </select>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Müşəhidə şurası</label>
                        <select asp-for="RelatedPerson.IsSupervisory" class="form-control form-control-sm col-md-7">
                            <option value="0">Xeyr</option>
                            <option value="1">Bəli</option>
                        </select>
                    </div>
                    <div class="form-group-sm col-md-6 row">
                        <label class="col-md-5">Üzvlüyü</label>
                        <select asp-for="SupervisorPosition.Id" class="form-control form-control-sm col-md-7">
                            <option value="0">Üzv</option>
                            <option value="1">Sədr</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>


        <button id="" class="btn btn-success float-end mt-4" asp-action="EditSupervisor" asp-controller="Supervisor" type="submit">Yadda Saxla</button>
        <a class="btn btn-primary float-end mt-4 mr-3" href="/Supervisor/Supervisors" type="submit">Imtina</a>
    </form>

</div>
<script>
</script>